{
    "name": "thedava/xspf-tools",
    "description": "Tools for manipulating *.xspf Playlists",
    "type": "project",
    "license": "GPL 3.0",
    "autoload": {
        "psr-4": {
            "Xspf\\": "src/Xspf"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "XspfMock\\": "test/XspfMock"
        }
    },
    "require": {
        "james-heinrich/getid3": "^1.9",
        "symfony/console": "^3",
        "davahome/self-update": "^1.1",
        "davahome/console": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^4",
        "davahome/php-cs-fixer-ruleset": "*"
    },
    "bin": [
        "./bin/xspf.php"
    ],
    "scripts": {
        "phplint": "bin/phplint.sh",
        "build": [
            "@composer self-update",
            "@php composer.phar install --no-dev -o",
            "@php bin/build-console.php",
            "@php -d phar.readonly=0 bin/build-phar.php",
            "@php xspf.phar version"
        ],
        "phpcs": [
            "bash bin/php-cs-fixer.sh",
            "php php-cs-fixer.phar fix --config=php_cs.php"
        ]
    }
}

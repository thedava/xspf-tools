{
    "name": "thedava/xspf-tools",
    "description": "Tools for manipulating *.xspf Playlists",
    "type": "project",
    "license": "GPL 3.0",
    "homepage": "https://github.com/thedava/xspf-tools",
    "autoload": {
        "psr-4": {
            "Xspf\\": "src/Xspf"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "XspfMock\\": "test/XspfMock"
        }
    },
    "require": {
        "php": ">=7.4",
        "symfony/console": "^3",
        "davahome/self-update": "^1.1",
        "davahome/console": "*",
        "symfony/yaml": "~3.0",
        "ext-zlib": "*",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^7",
        "davahome/php-cs-fixer-ruleset": "*"
    },
    "bin": [
        "./bin/xspf.php"
    ],
    "scripts": {
        "phplint": "bin/phplint.sh",
        "console": "@php bin/build-console.php",
        "dev": [
            "@composer self-update",
            "@php composer.phar install --ignore-platform-reqs"
        ],
        "build": [
            "@composer self-update",
            "@php composer.phar install --no-dev -o --ignore-platform-reqs",
            "@build-dev"
        ],
        "build-dev": [
            "@console",
            "@php -d phar.readonly=0 bin/build-phar.php",
            "@php build/xspf.phar version -v"
        ],
        "phpcs": [
            "@php composer.phar install --ignore-platform-reqs -q",
            "bash bin/php-cs-fixer.sh",
            "@php php-cs-fixer.phar fix --config=php_cs.php"
        ]
    }
}
